{
  "name": "lucky-hub",
  "version": "1.0.1",
  "description": "LCKY HUB - Modern platform for gaming, streaming and community",
  "author": "LCKY HUB Team",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "app.luckyhub",
    "productName": "LCKY HUB",
    "asar": true,
    "compression": "maximum",
    "forceCodeSigning": false,
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!**/*.map",
      "!node_modules/.bin",
      "!dist/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/img/logo.png",
      "artifactName": "LCKY HUB Setup ${version}.${ext}",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LCKY HUB",
      "uninstallDisplayName": "LCKY HUB",
      "include": "build/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "echtlucky",
      "repo": "lucky-hub",
      "private": false
    }
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7"
  },
  "dependencies": {
    "firebase": "^10.7.1"
  }
}
