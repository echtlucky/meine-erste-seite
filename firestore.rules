rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null;

      allow write: if request.auth != null && request.auth.uid == userId;

      allow read, write: if isAdmin();
    }

    match /usernames/{usernameLower} {
      allow read: if request.auth != null;

      allow create: if request.auth != null &&
        request.resource.data.keys().hasOnly(['uid','email','createdAt','updatedAt']) &&
        request.resource.data.uid == request.auth.uid;

      allow update: if request.auth != null &&
        request.resource.data.keys().hasOnly(['uid','email','createdAt','updatedAt']) &&
        resource.data.uid == request.auth.uid &&
        request.resource.data.uid == resource.data.uid;

      allow delete: if request.auth != null &&
        resource.data.uid == request.auth.uid;

      allow read, write: if isAdmin();
    }

    match /groups/{groupId} {
      allow read: if request.auth != null &&
                     (request.auth.uid in resource.data.members || isAdmin());

      allow create: if request.auth != null &&
                       request.resource.data.createdBy == request.auth.uid;

      allow update, delete: if request.auth != null &&
                              (isAdmin() || isGroupCreator() || isGroupAdmin() || canLeaveGroup());

      function isGroupCreator() {
        return request.auth != null && request.auth.uid == resource.data.createdBy;
      }

      function isGroupAdmin() {
        return request.auth != null &&
               ('roles' in resource.data) &&
               (resource.data.roles[request.auth.uid] == 'admin');
      }

      function canLeaveGroup() {
        return request.auth != null &&
               (request.auth.uid in resource.data.members) &&
               request.resource.data.keys().hasOnly(resource.data.keys()) &&
               request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
               request.resource.data.members.size() == resource.data.members.size() - 1 &&
               !(request.auth.uid in request.resource.data.members) &&
               resource.data.members.hasAll(request.resource.data.members);
      }

      match /messages/{messageId} {
        allow read: if request.auth != null &&
                       request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;

        allow create: if request.auth != null &&
                        request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members &&
                        request.resource.data.authorUid == request.auth.uid;

        allow update: if request.auth != null &&
                        (request.auth.uid == resource.data.authorUid || isAdmin());

        allow delete: if request.auth != null &&
                        (request.auth.uid == resource.data.authorUid || isAdmin());
      }

      match /voice-calls/{callId} {
        allow read, write: if request.auth != null &&
                             request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;

        match /offers/{offerId} {
          allow read, write: if request.auth != null &&
                               request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }

        match /answers/{answerId} {
          allow read, write: if request.auth != null &&
                               request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }

        match /ice-candidates/{candidateId} {
          allow read, write: if request.auth != null &&
                               request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }
      }
    }

    match /presence/{userId} {
      allow read: if request.auth != null;

      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /direct-calls/{callId} {
      allow read: if isDirectCallMember();

      allow create: if request.auth != null &&
        request.resource.data.keys().hasOnly([
          'initiator','initiatorName','to','toName',
          'participants','status','type','rejectedBy',
          'createdAt','acceptedAt','endedAt'
        ]) &&
        request.resource.data.type == 'direct' &&
        request.resource.data.initiator == request.auth.uid &&
        request.resource.data.to is string &&
        request.resource.data.status in ['ringing','active','in_call','ended'] &&
        request.resource.data.participants is list &&
        request.auth.uid in request.resource.data.participants;

      allow update, delete: if isDirectCallMember() &&
        request.resource.data.keys().hasOnly([
          'initiator','initiatorName','to','toName',
          'participants','status','type','rejectedBy',
          'createdAt','acceptedAt','endedAt'
        ]) &&
        request.resource.data.initiator == resource.data.initiator &&
        request.resource.data.to == resource.data.to &&
        request.resource.data.type == 'direct' &&
        request.resource.data.status in ['ringing','active','in_call','ended'] &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'participants','status','rejectedBy','acceptedAt','endedAt'
        ]);

      match /offers/{offerId} {
        allow read, write: if isDirectCallMemberById();
      }
      match /answers/{answerId} {
        allow read, write: if isDirectCallMemberById();
      }
      match /ice-candidates/{candidateId} {
        allow read, write: if isDirectCallMemberById();
      }

      function isDirectCallMember() {
        return request.auth != null &&
          (
            request.auth.uid == resource.data.initiator ||
            request.auth.uid == resource.data.to ||
            (request.auth.uid in resource.data.participants)
          );
      }

      function isDirectCallMemberById() {
        return request.auth != null &&
          (request.auth.uid in get(/databases/$(database)/documents/direct-calls/$(callId)).data.participants);
      }
    }

    match /streams/{streamId} {
      allow read: if true;

      allow create: if request.auth != null &&
        request.resource.data.keys().hasOnly([
          'ownerUid','ownerName','title','category','status','createdAt','updatedAt','endedAt'
        ]) &&
        request.resource.data.ownerUid == request.auth.uid &&
        request.resource.data.ownerName is string &&
        request.resource.data.title is string &&
        request.resource.data.title.size() >= 3 &&
        request.resource.data.title.size() <= 80 &&
        request.resource.data.category in ['just_chatting','gaming'] &&
        request.resource.data.status == 'live';

      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.ownerUid || isStaff()) &&
        request.resource.data.keys().hasOnly([
          'ownerUid','ownerName','title','category','status','createdAt','updatedAt','endedAt'
        ]) &&
        request.resource.data.ownerUid == resource.data.ownerUid &&
        request.resource.data.category == resource.data.category &&
        request.resource.data.createdAt == resource.data.createdAt &&
        request.resource.data.status in ['live','ended'] &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'title','ownerName','status','updatedAt','endedAt'
        ]);

      allow delete: if request.auth != null && (isAdmin() || request.auth.uid == resource.data.ownerUid);

      match /viewers/{viewerUid} {
        allow read: if canReadStreamSignal(streamId, viewerUid);

        allow create: if request.auth != null &&
          request.auth.uid == viewerUid &&
          request.resource.data.keys().hasOnly([
            'viewerUid','viewerName','status','joinedAt','offer','answer','updatedAt','answeredAt'
          ]) &&
          request.resource.data.viewerUid == viewerUid &&
          request.resource.data.viewerName is string &&
          request.resource.data.status in ['watching','left'] &&
          request.resource.data.offer == null &&
          request.resource.data.answer == null;

        // Viewer updates their own offer/status
        allow update: if request.auth != null &&
          request.auth.uid == viewerUid &&
          request.resource.data.keys().hasOnly([
            'viewerUid','viewerName','status','joinedAt','offer','answer','updatedAt','answeredAt'
          ]) &&
          request.resource.data.viewerUid == resource.data.viewerUid &&
          request.resource.data.answer == resource.data.answer &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['offer','status','updatedAt']) &&
          request.resource.data.status in ['watching','left'];

        // Broadcaster (or staff) writes answer
        allow update: if request.auth != null &&
          (request.auth.uid == streamOwnerUid(streamId) || isStaff()) &&
          request.resource.data.keys().hasOnly([
            'viewerUid','viewerName','status','joinedAt','offer','answer','updatedAt','answeredAt'
          ]) &&
          request.resource.data.viewerUid == resource.data.viewerUid &&
          request.resource.data.offer == resource.data.offer &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['answer','answeredAt','updatedAt','status']) &&
          request.resource.data.status in ['watching','left'];

        allow delete: if request.auth != null &&
          (request.auth.uid == viewerUid || request.auth.uid == streamOwnerUid(streamId) || isStaff());

        match /viewerCandidates/{candidateId} {
          allow read: if canReadStreamSignal(streamId, viewerUid);
          allow create: if request.auth != null && request.auth.uid == viewerUid;
          allow delete: if request.auth != null && (request.auth.uid == viewerUid || request.auth.uid == streamOwnerUid(streamId) || isStaff());
        }

        match /broadcasterCandidates/{candidateId} {
          allow read: if canReadStreamSignal(streamId, viewerUid);
          allow create: if request.auth != null && (request.auth.uid == streamOwnerUid(streamId) || isStaff());
          allow delete: if request.auth != null && (request.auth.uid == streamOwnerUid(streamId) || isStaff());
        }
      }

      match /chat/{messageId} {
        allow read: if true;

        allow create: if request.auth != null &&
          request.resource.data.keys().hasOnly(['authorUid','authorName','text','createdAt','createdAtClient']) &&
          request.resource.data.authorUid == request.auth.uid &&
          request.resource.data.authorName is string &&
          request.resource.data.authorName.size() >= 1 &&
          request.resource.data.authorName.size() <= 40 &&
          request.resource.data.text is string &&
          request.resource.data.text.size() >= 1 &&
          request.resource.data.text.size() <= 400;

        allow update: if false;

        allow delete: if request.auth != null &&
          (
            isAdmin() ||
            request.auth.uid == streamOwnerUid(streamId) ||
            resource.data.authorUid == request.auth.uid
          );
      }
    }

    match /tickets/{ticketId} {
      allow read: if canReadTicket();

      allow create: if request.auth != null &&
        request.resource.data.keys().hasOnly([
          'createdBy','createdByName','createdByEmail',
          'createdAt','updatedAt',
          'status','category','priority','title',
          'contextPage','contextTitle','contextUrl',
          'assignedTo','assignedToName','claimedAt',
          'lastMessagePreview','attachmentMeta','tags','mergedInto'
        ]) &&
        request.resource.data.createdBy == request.auth.uid &&
        request.resource.data.status == 'open' &&
        request.resource.data.category in ['bug','account','payments','feedback','other'] &&
        request.resource.data.priority in ['low','normal','high','urgent'] &&
        request.resource.data.title is string &&
        request.resource.data.title.size() >= 5 &&
        request.resource.data.title.size() <= 80 &&
        request.resource.data.assignedTo == null;

      allow update: if request.auth != null &&
        isTicketOwner() &&
        request.resource.data.keys().hasOnly(resource.data.keys()) &&
        request.resource.data.createdBy == resource.data.createdBy &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['updatedAt','status','lastMessagePreview']) &&
        request.resource.data.status in ['open','closed','waiting_staff','waiting_user'];

      allow update: if isStaff() &&
        request.resource.data.keys().hasOnly([
          'createdBy','createdByName','createdByEmail',
          'createdAt','updatedAt',
          'status','category','priority','title',
          'contextPage','contextTitle','contextUrl',
          'assignedTo','assignedToName','claimedAt',
          'lastMessagePreview','attachmentMeta','tags','mergedInto'
        ]) &&
        request.resource.data.createdBy == resource.data.createdBy &&
        request.resource.data.createdAt == resource.data.createdAt &&
        request.resource.data.category in ['bug','account','payments','feedback','other'] &&
        request.resource.data.priority in ['low','normal','high','urgent'] &&
        request.resource.data.status in ['open','closed','waiting_staff','waiting_user'] &&
        request.resource.data.title is string &&
        request.resource.data.title.size() >= 5 &&
        request.resource.data.title.size() <= 80 &&
        (
          !('assignedTo' in request.resource.data) ||
          request.resource.data.assignedTo == null ||
          request.resource.data.assignedTo is string
        ) &&
        (
          !('assignedToName' in request.resource.data) ||
          request.resource.data.assignedToName == null ||
          request.resource.data.assignedToName is string
        ) &&
        (
          !('tags' in request.resource.data) ||
          (request.resource.data.tags is list && request.resource.data.tags.size() <= 12)
        ) &&
        (
          !('mergedInto' in request.resource.data) ||
          request.resource.data.mergedInto == null ||
          request.resource.data.mergedInto is string
        );

      allow delete: if isAdmin();

      match /messages/{messageId} {
        allow read: if canReadTicketById(ticketId);

        allow create: if request.auth != null &&
          canReadTicketById(ticketId) &&
          request.resource.data.keys().hasOnly(['authorUid','authorName','authorRole','text','createdAt','attachments']) &&
          request.resource.data.authorUid == request.auth.uid &&
          request.resource.data.text is string &&
          request.resource.data.text.size() >= 1 &&
          request.resource.data.text.size() <= 1200 &&
          (
            (isTicketOwnerById(ticketId) && request.resource.data.authorRole == 'user') ||
            (isStaff() && request.resource.data.authorRole in ['admin','support','moderator'])
          );

        allow update, delete: if isStaff();
      }

      match /internal/{noteId} {
        allow read: if isStaff();
        allow create: if isStaff() && request.auth != null &&
          request.resource.data.keys().hasOnly(['authorUid','authorName','authorRole','text','createdAt']) &&
          request.resource.data.authorUid == request.auth.uid &&
          request.resource.data.text is string &&
          request.resource.data.text.size() >= 1 &&
          request.resource.data.text.size() <= 2000;
        allow update, delete: if isStaff();
      }

      function canReadTicket() {
        return request.auth != null &&
          (isStaff() || resource.data.createdBy == request.auth.uid);
      }

      function isTicketOwner() {
        return request.auth != null && resource.data.createdBy == request.auth.uid;
      }
    }

    match /blog/{documentId} {
      allow read: if true;

      allow create: if request.auth != null &&
                       request.resource.data.authorUid == request.auth.uid;

      allow update, delete: if request.auth != null &&
                              (request.auth.uid == resource.data.authorUid || isAdmin());

      match /comments/{commentId} {
        allow read: if true;

        allow create: if request.auth != null &&
          request.resource.data.authorUid == request.auth.uid &&
          request.resource.data.keys().hasOnly(['authorUid','authorName','text','createdAt','updatedAt']);

        allow update, delete: if request.auth != null &&
          (
            isAdmin() ||
            (resource.data.authorUid == request.auth.uid &&
             request.resource.data.keys().hasOnly(resource.data.keys()))
          );
      }
    }

    match /posts/{documentId} {
      allow read: if true;

      allow create, update, delete: if isAdmin();

      match /comments/{commentId} {
        allow read: if true;

        allow create: if request.auth != null &&
          request.resource.data.authorUid == request.auth.uid &&
          request.resource.data.keys().hasOnly(['authorUid','authorName','text','createdAt','updatedAt']);

        allow update, delete: if request.auth != null &&
          (
            isAdmin() ||
            (resource.data.authorUid == request.auth.uid &&
             request.resource.data.keys().hasOnly(resource.data.keys()))
          );
      }
    }

    match /bans/{documentId} {
      allow read, write: if isAdmin();
    }

    match /admin-logs/{logId} {
      allow read: if isAdmin();

      allow create: if isAdmin();
    }

    match /chat-logs/{logId} {
      allow read: if isAdmin();

      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
    }

    match /admin-stats/{statId} {
      allow read, write: if isAdmin();
    }

    function isAdmin() {
      return request.auth != null &&
             (request.auth.email == 'lucassteckel04@gmail.com' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    function isStaff() {
      return request.auth != null &&
        (
          isAdmin() ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'support' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'moderator'
        );
    }

    function canReadTicketById(ticketId) {
      return request.auth != null &&
        (
          isStaff() ||
          get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid
        );
    }

    function isTicketOwnerById(ticketId) {
      return request.auth != null &&
        get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
    }

    function streamOwnerUid(streamId) {
      return get(/databases/$(database)/documents/streams/$(streamId)).data.ownerUid;
    }

    function canReadStreamSignal(streamId, viewerUid) {
      return request.auth != null &&
        (
          isStaff() ||
          request.auth.uid == viewerUid ||
          request.auth.uid == streamOwnerUid(streamId)
        );
    }
  }
}
