rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // USERS COLLECTION
    // ==========================================
    match /users/{userId} {
      // Users can read all user profiles (for online status, friends list)
      allow read: if request.auth != null;
      
      // Users can only write their own data
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Admins can read and write all user data
      allow read, write: if isAdmin();
    }

    // ==========================================
    // USERNAMES COLLECTION (for username lookup)
    // ==========================================
    match /usernames/{usernameLower} {
      // Anyone authenticated can read to check availability
      allow read: if request.auth != null;
      
      // Only users can write their own username mapping
      allow write: if request.auth != null && request.auth.uid == request.resource.data.uid;
      
      // Admins can manage all
      allow read, write: if isAdmin();
    }
    
    // ==========================================
    // GROUPS COLLECTION
    // ==========================================
    match /groups/{groupId} {
      // Read: user must be a member of the group OR admin
      allow read: if request.auth != null && 
                     (request.auth.uid in resource.data.members || isAdmin());
      
      // Create: authenticated users can create groups
      allow create: if request.auth != null && 
                       request.resource.data.createdBy == request.auth.uid;
      
      // Update/Delete: group creator or admin only
      allow update, delete: if request.auth != null && 
                              (request.auth.uid == resource.data.createdBy || isAdmin());
      
      // ==========================================
      // GROUP MESSAGES
      // ==========================================
      match /messages/{messageId} {
        // Read: members of parent group can read
        allow read: if request.auth != null && 
                       request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        
        // Create: members can add messages
        allow create: if request.auth != null && 
                        request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members &&
                        request.resource.data.authorUid == request.auth.uid;
        
        // Update: message author or admin can update
        allow update: if request.auth != null && 
                        (request.auth.uid == resource.data.authorUid || isAdmin());
        
        // Delete: message author or admin can delete
        allow delete: if request.auth != null && 
                        (request.auth.uid == resource.data.authorUid || isAdmin());
      }
      
      // ==========================================
      // VOICE CALLS
      // ==========================================
      match /voice-calls/{callId} {
        // Read/Write: group members only
        allow read, write: if request.auth != null && 
                             request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        
        // Subcollections for signaling
        match /offers/{offerId} {
          allow read, write: if request.auth != null && 
                               request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }
        
        match /answers/{answerId} {
          allow read, write: if request.auth != null && 
                               request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }
        
        match /ice-candidates/{candidateId} {
          allow read, write: if request.auth != null && 
                               request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }
      }
    }
    
    // ==========================================
    // PRESENCE COLLECTION (for online status)
    // ==========================================
    match /presence/{userId} {
      // Users can read all presence data (for online friends list)
      allow read: if request.auth != null;
      
      // Users can only write their own presence
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ==========================================
    // BLOG COLLECTION
    // ==========================================
    match /blog/{documentId} {
      // Everyone (authenticated) can read blog posts
      allow read: if request.auth != null;
      
      // Only creator or admin can write blog posts
      allow create: if request.auth != null && 
                       request.resource.data.authorUid == request.auth.uid;
      
      allow update, delete: if request.auth != null && 
                              (request.auth.uid == resource.data.authorUid || isAdmin());
    }

    // ==========================================
    // POSTS COLLECTION (Admin Blog)
    // ==========================================
    match /posts/{documentId} {
      // Everyone (authenticated) can read posts
      allow read: if request.auth != null;
      
      // Only admin can write posts
      allow create, update, delete: if isAdmin() && 
                                        request.resource.data.author == request.auth.email;
    }

    // ==========================================
    // BANS COLLECTION (Admin)
    // ==========================================
    match /bans/{documentId} {
      // Only admin can read and write bans
      allow read, write: if isAdmin();
    }

    // ==========================================
    // ADMIN LOGS COLLECTION (Activity Logging)
    // ==========================================
    match /admin-logs/{logId} {
      // Only admin can read logs
      allow read: if isAdmin();
      
      // Admin or system can create logs
      allow create: if isAdmin() || request.auth == null;
    }

    // ==========================================
    // CHAT LOGS COLLECTION (Chat History/Comments)
    // ==========================================
    match /chat-logs/{logId} {
      // Only admin can read chat logs
      allow read: if isAdmin();
      
      // Anyone authenticated can create chat logs (for recording conversations)
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
    }

    // ==========================================
    // ADMIN STATS COLLECTION (Statistics & Analytics)
    // ==========================================
    match /admin-stats/{statId} {
      // Only admin can read/write stats
      allow read, write: if isAdmin();
    }
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    function isAdmin() {
      return request.auth != null && 
             (request.auth.email == 'lucassteckel04@gmail.com' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}
